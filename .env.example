# ==========================================
# CodeMie Configuration (Recommended)
# ==========================================
# Use these generic variables for any AI provider:
CODEMIE_BASE_URL=https://your-ai-proxy.com
CODEMIE_AUTH_TOKEN=your-token-here
CODEMIE_MODEL=claude-4-5-sonnet
CODEMIE_TIMEOUT=300

# ==========================================
# Advanced: Provider-Specific Configuration
# ==========================================
# If CODEMIE_* variables are not set, these are used as fallback

# Anthropic Configuration (for Claude models)
# Works with direct Anthropic API or AI proxy
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_AUTH_TOKEN=your-anthropic-token
ANTHROPIC_API_KEY=your-anthropic-token  # Alternative to AUTH_TOKEN
ANTHROPIC_MODEL=claude-4-5-sonnet

# OpenAI Configuration (for GPT models)
# Works with direct OpenAI API or AI proxy
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-key
OPENAI_AUTH_TOKEN=your-openai-key  # Alternative to API_KEY
OPENAI_MODEL=gpt-4

# ==========================================
# Optional Configuration
# ==========================================
# Debug Mode
CODEMIE_DEBUG=false

# MCP Servers
CODEMIE_MCP_SERVERS=time,context7
